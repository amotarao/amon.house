{
  "name": "amon.house",
  "version": "1.0.1",
  "description": "My shining Nuxt.js project",
  "author": "Amon Sawamura",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "rm -rf public/* && nuxt-ts build && cp -R .nuxt/dist/client public/_nuxt && cp -R src/static/* public",
    "build:noindex": "NOINDEX=true yarn build",
    "start": "nuxt-ts start",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.4.7",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/pwa": "^3.0.0-0",
    "@nuxtjs/sitemap": "^2.3.0",
    "nuxt": "^2.12.2"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^1.0.0",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": ">=1.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fibers": "^4.0.2",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.5",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2"
  }
}
