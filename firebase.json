{
  "hosting": [
    {
      "target": "production",
      "public": "packages/app/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.@(js|ico|jpeg|jpg|png|gif|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "run": {
            "serviceId": "amon-house",
            "region": "asia-northeast1"
          }
        }
      ]
    },
    {
      "target": "development",
      "public": "packages/app/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.@(js|ico|jpeg|jpg|png|gif|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "run": {
            "serviceId": "amon-house-dev",
            "region": "asia-northeast1"
          }
        }
      ]
    }
  ]
}