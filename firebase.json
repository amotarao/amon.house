{
  "functions": {
    "source": "packages/functions"
  },
  "hosting": [
    {
      "target": "production",
      "public": "packages/app/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.@(js|ico|jpeg|jpg|png|gif|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssrProd"
        }
      ]
    },
    {
      "target": "development",
      "public": "packages/app/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.@(js|ico|jpeg|jpg|png|gif|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssrDev"
        }
      ]
    }
  ]
}