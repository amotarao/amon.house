{
  "functions": {
    "source": "packages/functions"
  },
  "hosting": [
    {
      "target": "production",
      "public": "packages/app/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssrProd"
        }
      ]
    },
    {
      "target": "development",
      "public": "packages/app/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "ssrDev"
        }
      ]
    }
  ]
}